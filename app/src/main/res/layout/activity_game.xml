<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/game"
    android:fillViewport="true">


    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:orientation="vertical">

        <TextView
            android:text="N° :"
            android:layout_weight="1"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:textSize="25dp"
            android:layout_marginRight="15dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"

            android:id="@+id/textViewN"
            android:textColor="@android:color/black" />

        <TextView
            android:text="Mots :"
            android:layout_weight="1"
            android:textSize="25dp"
            android:textColor="@android:color/black"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/textViewN"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:id="@+id/textViewMots" />

        <TextView
            android:text="A :"
            android:layout_weight="1"
            android:textSize="25dp"
            android:textColor="@android:color/black"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"

            android:id="@+id/textViewA"
            android:layout_toLeftOf="@+id/textViewB" />

        <TextView
            android:text="B :"
            android:layout_weight="1"
            android:textColor="@android:color/black"
            android:textSize="25dp"
            android:layout_marginLeft="15dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:id="@+id/textViewB"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            />


        <Button
            android:text="Aide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/editTextMot"
            android:layout_alignParentRight="true"
            android:background="@drawable/gama2"
            android:id="@+id/bAide"
            android:layout_marginLeft="5dp"
            android:layout_alignParentBottom="true" />

        <Button
            android:text="Vérifier"
            android:background="@drawable/blou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bVerif"
            android:layout_toLeftOf="@+id/bAide"
            android:layout_toStartOf="@+id/bAide"
            android:layout_alignParentBottom="true"
            android:layout_alignTop="@+id/bAide" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text=""
            android:background="#FFFF"
            android:textColor="@android:color/black"
            android:hint="Mots"
            android:id="@+id/editTextMot"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>
</ScrollView>